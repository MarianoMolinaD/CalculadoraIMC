<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragment.LowWeightFragment">

    <LinearLayout
        android:id="@+id/encabezadoInicial"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/gradient_low"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/buttonBack"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="?selectableItemBackgroundBorderless"
            app:tint = "@color/white"
            android:src="@drawable/ic_back" />

            <TextView
                android:layout_marginTop="24dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="Tu resultado"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:layout_weight="1" />


    </LinearLayout>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/colorGradientLow"
        android:textSize="75dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/encabezadoInicial"
        tools:text="12.5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMeasurer"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingHorizontal="20dp"
        android:animateLayoutChanges="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResult">

        <View
            android:id="@+id/bajo"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/colorGradientLow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/medio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <View
            android:id="@+id/bajoBase"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/medio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/triangulo"
            app:layout_constraintBottom_toTopOf="@+id/bajoBase"
            app:layout_constraintStart_toStartOf="@+id/bajoBase"
            app:layout_constraintEnd_toEndOf="@id/bajo"
            app:layout_constraintHorizontal_bias="0.5"
            />

        <View
            android:id="@+id/medio"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/colorGradientNormal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/sobrepeso"
            app:layout_constraintStart_toEndOf="@+id/bajo"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/sobrepeso"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/colorGradientSobrepeso"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/obecidad"
            app:layout_constraintStart_toEndOf="@+id/medio"
            app:layout_constraintTop_toTopOf="parent"

            />

        <View
            android:id="@+id/obecidad"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/colorGradientObecidad"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sobrepeso"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/llText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/color_text_low"
        android:paddingHorizontal="95dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clMeasurer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="Bajo"
            android:textColor="@color/white"
            android:textSize="36dp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="36dp"
        android:layout_marginHorizontal="24dp"
        android:backgroundTint="@color/colorCard"
        app:cardElevation="12dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@+id/llText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Bajo"
                android:layout_marginVertical="26dp"
                android:textColor="@color/black"
                android:fontFamily="@font/barlowcondensed_bold"
                android:textAlignment="center"
                android:textSize="20dp"
                />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/ivGender"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:src="@drawable/men"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintHorizontal_bias="0.9"
        />

</androidx.constraintlayout.widget.ConstraintLayout>